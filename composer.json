{
    "name": "elbandi/exchange-notify",
    "description": "Notify exchange trades and transactions",
    "keywords": ["cryptocurrency", "exchange", "trade", "transactions", "console", "cli"],
    "homepage": "https://laravel-zero.com",
    "type": "project",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/bitbandi/exchange-notify/issues",
        "source": "https://github.com/bitbandi/exchange-notify"
    },
    "authors": [
        {
            "name": "Elbandi",
            "email": "bandispam@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "ccxt/ccxt": "^3.0",
        "henzeb/laravel-console-facade": "^1.18",
        "illuminate/database": "^9.0.0",
        "illuminate/notifications": "^9.0.0",
        "illuminate/view": "^9.0.0",
        "laravel-notification-channels/discord": "^1.5",
        "laravel-notification-channels/pushover": "^3.1",
        "laravel-notification-channels/telegram": "^3.0",
        "laravel-zero/framework": "^9.2.0",
        "laravel/slack-notification-channel": "^2.5",
        "nesbot/carbon": "^2.62.1",
        "php-pushover/php-pushover": "^1.0",
        "pragmarx/yaml": "^1.3"
    },
    "require-dev": {
        "fakerphp/faker": "^1.9.1",
        "mockery/mockery": "^1.4.2",
        "pestphp/pest": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "bin": ["exchange-notify"]
}
